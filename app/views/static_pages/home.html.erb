<% provide(:title, "Home") %>
<!Doctype html>
<html>
<head>
    <title><%= yield(:title) %></title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-md-offset-3 jumbotron">
                    <div>
                        <h1>Welcome to Bugzilla</h1>
                        <p>This is the homepage for Bugzilla Test App</p>
                        <% if !logged_in? %>
                        <div>
                            <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary btn_signup" %>
                        </div>
                        <% end %>
                    </div>
            </div>
        </div>
    </div>
</body>
</html>